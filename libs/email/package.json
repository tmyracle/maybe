{
    "name": "emails",
    "version": "0.0.18",
    "private": true,
    "workspaces": [
        ".react-email"
    ],
    "scripts": {
        "build": "email build",
        "dev": "email dev",
        "export": "email export"
    },
    "dependencies": {
        "@react-email/components": "0.0.14",
        "react-email": "2.0.0"
    },
    "nx": {
        "targets": {
            "lint": {
                "executor": "@nrwl/linter:eslint",
                "outputs": [
                    "{options.outputFile}"
                ],
                "options": {
                    "lintFilePatterns": [
                        "libs/email/**/*.ts"
                    ]
                }
            },
            "test": {
                "executor": "@nrwl/jest:jest",
                "outputs": [
                    "/coverage/libs/email"
                ],
                "options": {
                    "jestConfig": "libs/email/jest.config.ts",
                    "passWithNoTests": true
                }
            },
            "dev": {
                "executor": "nx:run-commands",
                "options": {
                    "cwd": "libs/email",
                    "command": "yarn dev --port 4321"
                }
            }
        }
    }
}
